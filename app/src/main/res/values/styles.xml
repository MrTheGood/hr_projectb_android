<resources>

    <style name="AppTheme.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary colours -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Secondary colours -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- Backwards compatibility -->
        <item name="colorPrimaryDark">@color/colorPrimaryVariant</item>
        <item name="colorAccent">@color/colorSecondary</item>

        <!-- Other -->
        <item name="android:colorBackground">@color/colorSurface</item>
        <item name="colorOnBackground">@color/colorOnSurface</item>

        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
    </style>


    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary colours -->
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Secondary colours -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- Backwards compatibility -->
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorSecondary</item>

        <!-- Other -->
        <item name="android:colorBackground">@color/colorSurfaceDark</item>
        <item name="colorOnBackground">@color/colorOnSurfaceDark</item>

        <item name="colorSurface">@color/colorSurfaceDark</item>
        <item name="colorOnSurface">@color/colorOnSurfaceDark</item>

        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
    </style>


    <style name="AppTheme.Light.Purple">
        <!-- Primary colours -->
        <item name="colorPrimary">#ffaa66cc</item>
        <item name="colorPrimaryVariant">#7B1FA2</item>

        <!-- Secondary colours -->
        <item name="colorSecondary">#4CAF50</item>
        <item name="colorSecondaryVariant">#388E3C</item>

        <item name="colorPrimaryDark">#7B1FA2</item>
        <item name="colorAccent">#4CAF50</item>
    </style>


    <style name="AppTheme.Dark.Purple">
        <!-- Primary colours -->
        <item name="colorPrimary">#ffaa66cc</item>

        <!-- Secondary colours -->
        <item name="colorSecondary">#ffaa66cc</item>
        <item name="colorSecondaryVariant">#ffaa66cc</item>

        <item name="colorAccent">#ffaa66cc</item>
    </style>


    <style name="AppTheme.Light.Red">
        <!-- Primary colours -->
        <item name="colorPrimary">#D64C4C</item>
        <item name="colorPrimaryVariant">#DD2828</item>

        <!-- Secondary colours -->
        <item name="colorSecondary">#D64C4C</item>
        <item name="colorSecondaryVariant">#DD2828</item>

        <item name="colorPrimaryDark">#DD2828</item>
        <item name="colorAccent">#D64C4C</item>
    </style>


    <style name="AppTheme.Dark.Red">
        <!-- Primary colours -->
        <item name="colorPrimary">#DD2828</item>

        <!-- Secondary colours -->
        <item name="colorSecondary">#DD2828</item>
        <item name="colorSecondaryVariant">#DD2828</item>

        <item name="colorAccent">#DD2828</item>
    </style>

</resources>
